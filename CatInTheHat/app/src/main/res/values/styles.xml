<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent"  tools:targetApi="21">@color/accent</item>

        <item name="android:colorButtonNormal" tools:targetApi="21">@color/accent</item>
        <item name="android:textColor" tools:targetApi="21">@color/white</item>
    </style>

</resources>
